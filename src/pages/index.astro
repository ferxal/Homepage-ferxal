---
import App from "../components/app.astro";
import locale from "../data/locales/zh";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{locale.meta.title}</title>
    <meta name="description" content={locale.meta.description} />
    <meta property="og:title" content={locale.meta.ogTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={locale.meta.ogDescription} />
    <meta property="og:url" content="https://www.chenhen.top" />
    <meta property="og:image" content="icons/cover.png" />
    <link
      rel="preload"
      href=`${Astro.site}/fonts/MaoKenZhuYuanTi.woff2`
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="preload" href=`${Astro.site}/icons/icons.png` as="image" type="image/png" />
    <link rel="shortcut icon" href=`${Astro.site}/favicons/favicon.ico` />
    <link rel="apple-touch-icon" sizes="180x180" href=`${Astro.site}/favicons/avatar.png` />
    <link rel="icon" type="image/png" sizes="32x32" href=`${Astro.site}/favicons/avatar.png` />
    <link rel="icon" type="image/png" sizes="16x16" href=`${Astro.site}/favicons/avatar.png` />
    <link rel="manifest" href=`${Astro.site}/favicons/site.webmanifest` />
    <link rel="dns-prefetch" href="//www.chenhen.top" />
    <link rel="dns-prefetch" href="//eopfapi.acofork.com" />
    <link rel="dns-prefetch" href="//api.1t.nz" />
    <link rel="dns-prefetch" href="//image.idealclover.cn" />

    <!-- 预连接关键域名 -->
    <link rel="preconnect" href="https://eopfapi.acofork.com" crossorigin />
    <link rel="preconnect" href="https://api.1t.nz" crossorigin />
    <link rel="preconnect" href="https://image.idealclover.cn" crossorigin />

    <!-- 预加载关键 LCP 资源 -->
    <link
      rel="preload"
      href="https://eopfapi.acofork.com/pic?img=ua"
      as="image"
      fetchpriority="high"
    />
    <link
      rel="preload"
      href="/favicons/avatar.png"
      as="image"
      fetchpriority="high"
    />

    <style is:inline>
      /* 关键 CSS 内联 */
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
      }
      html {
        background-color: #171717; /* 设置 HTML 背景色作为底层兜底 */
      }
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: transparent !important; /* 确保 body 透明，露出伪元素背景 */
      }
    </style>

    <style>
      @font-face {
        font-family: "MaokenZhuyuanTi";
        src: url(https://image.idealclover.cn/projects/Homepage/fonts/MaoKenZhuYuanTi.woff2?v=241202);
        font-display: swap;
      }

      body {
        cursor: url(https://image.idealclover.cn/projects/Homepage/icons/cursor.ico),
          auto;
        font-family: "MaokenZhuyuanTi";
        overflow-x: hidden;
      }

      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background-image: url("https://eopfapi.acofork.com/pic?img=ua");
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        z-index: -2;
        pointer-events: none;
      }

      body::after {
        content: "";
        position: fixed;
        inset: 0;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px) saturate(180%);
        -webkit-backdrop-filter: blur(10px) saturate(180%);
        z-index: -1;
        pointer-events: none;
      }

      @media (prefers-color-scheme: dark) {
        body::after {
          background: rgba(0, 0, 0, 0.4);
        }
      }
    </style>
  </head>
  <body class="">
    <App />
    <script defer src=`${Astro.site}/libs/mouse-click.js`></script>
