---
/**
 * Profile 组件
 * 侧边栏用户信息展示
 */
interface Props {
  imgUrl: string;
  title: string;
  desc: string;
}

const { imgUrl, title, desc } = Astro.props;
---

<aside
  class="min-w-full md:min-w-0 xl:basis-1/3 xl:h-screen xl:sticky xl:top-0 flex flex-col items-center xl:items-start"
>
  <div class="pt-10 xl:pt-20"></div>
  <div class="flex flex-col items-center xl:items-start text-center xl:text-left">
    <img
      class="w-32 h-32 md:w-48 md:h-48 rounded-full shadow-2xl shadow-accent/20 transition-transform duration-500 hover:rotate-12"
      src={imgUrl}
      alt={title}
    />
    <div class="pt-8"></div>
    <h1 class="text-4xl font-extrabold text-white drop-shadow-md">{title}</h1>
    <p class="text-lg text-white/90 mt-3 font-medium drop-shadow-sm">{desc}</p>
  </div>
</aside>
