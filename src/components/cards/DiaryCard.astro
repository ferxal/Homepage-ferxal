---
/**
 * DiaryCard 组件
 * 竖向的长方形卡片，通常用于展示生活照或日记
 */
interface Props {
  title: string;      // 标题
  url: string;        // 链接
  bgStyle?: string;   // 背景样式 (通常包含背景图)
  textStyle?: string; // 文本样式
  className?: string; // 额外的自定义类名
}

const { 
  title, 
  url, 
  bgStyle = "bg-primary", 
  textStyle = "",
  className = ""
} = Astro.props;
---

<a href={url} target="_blank" class:list={["block group", className]}>
  <div
    class:list={[
      "card max-lg:card-compact rounded-2xl shadow-xl w-full aspect-[9/16] lg:w-[12rem] lg:h-[21.33rem] mb-8 transition-all duration-300 hover:scale-[1.02]",
      bgStyle,
    ]}
  >
    <div class="card-body rounded-2xl w-full h-full !p-0 relative overflow-hidden">
      <div class="h-full w-full"></div>
      <div class="absolute bottom-0 w-full p-4 glass rounded-b-2xl transition-transform duration-300 translate-y-2 group-hover:translate-y-0">
        <p class:list={[textStyle, "card-title text-base font-bold"]}>
          {title}
        </p>
      </div>
    </div>
  </div>
</a>
