---
/**
 * ContactCard 组件
 * 用于展示联系方式，支持精灵图图标
 */
interface Props {
  title: string;      // 联系方式类型 (如 "Email", "QQ")
  url: string;        // 链接
  icon?: string;      // 图标路径
  bgStyle?: string;   // 背景样式
  textStyle?: string; // 文本样式
  btnText?: string;   // 按钮文案
  btnStyle?: string;  // 按钮样式
  className?: string; // 额外的自定义类名
}

const { 
  title, 
  url, 
  icon = "", 
  bgStyle = "bg-white", 
  textStyle = "", 
  btnText = "", 
  btnStyle = "",
  className = ""
} = Astro.props;
---

<a href={url} target="_blank" class:list={["block group", className]}>
  <div class:list={["card card-compact rounded-2xl flex justify-center shadow-md w-full h-[3.5rem] lg:h-[4rem] mb-4 transition-all duration-300 hover:scale-[1.02]", bgStyle]}>
      <div class="card-body justify-center py-2 px-4">
        <div class="flex items-center justify-between gap-2 overflow-hidden">
          <div class="flex items-center min-w-0">
            {icon && <img src={icon} class="w-6 h-6 mr-2 shrink-0 brightness-0 invert" alt={title} />}
            <span
              class:list={[
                textStyle,
                "text-base font-medium truncate",
              ]}
            >
              {title}
            </span>
          </div>
          {
            btnText && (
              <span class:list={[btnStyle, "text-xs opacity-80 shrink-0"]}>
                {btnText}
              </span>
            )
          }
        </div>
      </div>
    </div>
</a>

<style>
  .mail_s, .QQ_s, .telegram_s, .twitter_s {
    display: none;
  }
</style>
