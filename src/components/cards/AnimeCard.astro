---
import zh from "../../data/locales/zh";

interface Props {
  title: string;
  cover: string;
  link: string;
  status: "watching" | "completed" | "planned" | "onhold" | "dropped";
  rating: number;
  progress: number;
  totalEpisodes: number;
  description: string;
  year: string;
  studio: string;
  genre: string[];
  className?: string;
}

const {
  title,
  cover,
  link,
  status,
  rating,
  progress,
  totalEpisodes,
  genre,
  className = "",
} = Astro.props;

const locale = zh;

function getStatusInfo(status: string) {
  switch (status) {
    case "watching":
      return {
        text: locale.components.anime.status.watching,
        class: "bg-emerald-600 text-white shadow-lg shadow-emerald-900/20",
        icon: "▶",
      };
    case "completed":
      return {
        text: locale.components.anime.status.completed,
        class: "bg-blue-600 text-white shadow-lg shadow-blue-900/20",
        icon: "✓",
      };
    case "planned":
      return {
        text: locale.components.anime.status.planned,
        class: "bg-amber-600 text-white shadow-lg shadow-amber-900/20",
        icon: "❤",
      };
    case "onhold":
      return {
        text: locale.components.anime.status.onhold,
        class: "bg-purple-600 text-white shadow-lg shadow-purple-900/20",
        icon: "⏸",
      };
    case "dropped":
      return {
        text: locale.components.anime.status.dropped,
        class: "bg-rose-600 text-white shadow-lg shadow-rose-900/20",
        icon: "✗",
      };
    default:
      return {
        text: status,
        class: "bg-gray-600 text-white shadow-lg shadow-gray-900/20",
        icon: "?",
      };
  }
}

const statusInfo = getStatusInfo(status);
const progressPercent = totalEpisodes > 0 ? Math.min((progress / totalEpisodes) * 100, 100) : 0;
---

<div
  class:list={[
    "group relative bg-white dark:bg-neutral-800 border border-gray-200 dark:border-neutral-700 rounded-3xl overflow-hidden hover:shadow-lg transition-all duration-300",
    className,
  ]}
>
  <div class="relative aspect-[2/3] overflow-hidden">
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="block w-full h-full"
    >
      <img
        src={cover}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
        <div class="absolute inset-0 flex items-center justify-center">
          <div
            class="w-10 h-10 rounded-full bg-white/90 flex items-center justify-center"
          >
            <svg class="w-5 h-5 text-gray-800 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </div>
        </div>
      </div>
    </a>

    <!-- Status Badge -->
    <div
      class:list={[
        "absolute top-2 left-2 px-2 py-1 rounded-lg text-[10px] font-bold flex items-center gap-1",
        statusInfo.class,
      ]}
    >
      <span>{statusInfo.icon}</span>
      <span>{statusInfo.text}</span>
    </div>

    <!-- Rating Badge -->
    <div
      class="absolute top-2 right-2 bg-black/80 backdrop-blur-md text-white px-2 py-1 rounded-lg text-[10px] font-bold flex items-center gap-1 shadow-lg shadow-black/20"
    >
      <svg class="w-2.5 h-2.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
        <path
          d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
        ></path>
      </svg>
      <span>{Number(rating) > 0 ? Number(rating).toFixed(1) : "N/A"}</span>
    </div>

    <!-- Progress Bar (Only for watching) -->
    {
      status === "watching" && (
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 to-transparent p-2 pt-4">
          <div class="w-full bg-white/20 rounded-full h-1.5 mb-1 overflow-hidden">
            <div
              class="bg-blue-500 h-full rounded-full transition-all duration-500 shadow-[0_0_8px_rgba(59,130,246,0.5)]"
              style={`width: ${progressPercent}%`}
            />
          </div>
          <div class="text-white text-[10px] font-bold flex justify-between drop-shadow-md">
            <span>
              {progress}/{totalEpisodes || "?"} EP
            </span>
            <span>{Math.round(progressPercent)}%</span>
          </div>
        </div>
      )
    }
  </div>

  <div class="p-3">
    <h3
      class="text-xs font-bold text-gray-900 dark:text-white mb-1 truncate"
      title={title}
    >
      {title}
    </h3>
    <div class="flex flex-wrap gap-1 mt-1">
      {
        genre.slice(0, 2).map((g) => (
          <span class="px-1.5 py-0.5 bg-gray-100 dark:bg-neutral-700 text-gray-600 dark:text-neutral-400 rounded text-[9px]">
            {g}
          </span>
        ))
      }
    </div>
  </div>
</div>
