---
/**
 * BlogCard 组件
 * 引导用户前往博客的入口卡片
 */
interface Props {
  title: string;      // 标题 (如 "博客")
  desc: string;       // 描述信息
  subdesc?: string;    // 博客链接/子标题
  url: string;        // 跳转链接
  btnText?: string;    // 按钮文案
  bgStyle?: string;    // 背景样式
  textStyle?: string; // 文本颜色样式
  btnStyle?: string;  // 按钮背景样式
  btnTextStyle?: string; // 按钮文本颜色
  className?: string; // 额外的自定义类名
}

const { 
  title, 
  desc, 
  subdesc, 
  url, 
  btnText = "阅读更多",
  bgStyle = "bg-secondary",
  textStyle = "",
  btnStyle = "bg-opacity-20 hover:bg-opacity-30",
  btnTextStyle = "",
  className = ""
} = Astro.props;
---

<a href={url} target="_blank" class:list={["block group", className]}>
  <div
    class:list={[
      "card max-lg:card-compact rounded-2xl shadow-xl w-full md:h-[10.5rem] lg:w-[26rem] lg:h-[12rem] mb-8 transition-all duration-300",
      bgStyle,
      textStyle,
    ]}
  >
    <div class="card-body rounded-2xl group-hover:glass transition-all duration-300">
      <h2 class="card-title text-2xl font-bold whitespace-nowrap">{title}</h2>
      <p class="text-sm leading-relaxed">
        {desc}<br />
        {subdesc && <span class="opacity-75">{subdesc}</span>}
      </p>
      {btnText && (
        <div class="card-actions justify-end">
          <button
            class:list={[
              "btn btn-sm rounded-xl border-0",
              btnStyle,
              btnTextStyle,
            ]}
          >
            {btnText}
          </button>
        </div>
      )}
    </div>
  </div>
</a>
